<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/seckill_toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/seckillgoods_detail_image_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/back"/>

            <TextView
                android:id="@+id/seckillgoods_detail_top_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="合伙人商品"
                />


        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical">
        <RelativeLayout
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <EditText
                android:inputType="text"
                android:id="@+id/parnter_top_editsearch"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@drawable/edit_bg"
                android:hint="请输入您要搜索的商品"
                android:imeOptions="actionSearch"
                android:maxLines="1"
                android:minLines="1"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textColorHint="#909090"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:src="@drawable/search" />

            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--pageview 轮播效果-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.jude.rollviewpager.RollPagerView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/partner_view_pager"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:rollviewpager_hint_gravity="right"
                app:rollviewpager_play_delay="3000"/>
            <!--pageview 轮播效果 end -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="@drawable/goods_list_type"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_default"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:text="默认"/>

                <View
                    android:id="@+id/top_view1"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/view_color"/>

                <Button
                    android:id="@+id/parnter_goods_detail_price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:text="价格"/>

                <View
                    android:id="@+id/top_view4"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/view_color"/>

            </LinearLayout>
            <com.aboluo.XUtils.RBCallbkRecyclerView
                android:id="@+id/parnter_RecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.aboluo.XUtils.RBCallbkRecyclerView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>