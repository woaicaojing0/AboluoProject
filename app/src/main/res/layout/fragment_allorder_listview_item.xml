<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:layout_marginTop="12dp"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="40dp">
<ImageView
    android:layout_centerVertical="true"
    android:id="@+id/shop_icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:src="@drawable/shopicon"/>

        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阿波罗自营店"
            android:layout_marginLeft="8dp"

            android:layout_toEndOf="@+id/shop_icon"
            android:id="@+id/shop_name"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_toRightOf="@+id/shop_name"
            android:src="@drawable/right"/>
        <TextView
            android:id="@+id/txt_order_status"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:textColor="@color/btn_color"
            android:text="卖家已发货"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共计"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="件商品"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计："/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥169.00"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(含运费"/>

        <TextView
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥0.00)"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e7e7e7"></View>
    <LinearLayout
        android:gravity="center_vertical|right"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <Button
            android:visibility="gone"
            android:id="@+id/btn_findgoods"
            android:background="@drawable/order_button"
            android:layout_width="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_height="26dp"
            android:text="查看物流"/>
        <Button
            android:visibility="gone"
            android:id="@+id/btn_ok"
            android:background="@drawable/order_button"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginRight="8dp"
            android:text="确认收货"/>
        <Button
            android:visibility="gone"
            android:id="@+id/btn_cancelorder"
            android:background="@drawable/order_button"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginRight="8dp"
            android:text="取消订单"/>
        <Button
            android:visibility="gone"
            android:id="@+id/btn_payorder"
            android:background="@drawable/order_button"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginRight="8dp"
            android:text="继续支付"/>
    </LinearLayout>
</LinearLayout>