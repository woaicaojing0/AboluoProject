<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

      <ImageView
          android:id="@+id/image_order_goodsimage"
          android:layout_width="90dp"
          android:layout_height="90dp"
          android:layout_marginLeft="8dp"
          android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:textColor="#000000"
                    android:ellipsize="end"
                    android:layout_width="0dp"
                    android:paddingLeft="8dp"
                    android:lines="2"
                    android:lineSpacingExtra="4dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="啥事都问我干啥干啥的干啥的干啥的感受到对方水电费为白色的手势"
                    android:id="@+id/txt_order_goodsName" />

                <LinearLayout
                    android:gravity="right"
                    android:layout_marginRight="8dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txt_order_hyprice"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="4dp"
                        android:text="￥1690.00" />
                    <TextView
                        android:id="@+id/txt_order_yuanprice"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textColor="#acacac"
                        android:text="￥1690.00" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_order_standardandcolor"
                    android:layout_marginLeft="8dp"
                    android:layout_width="0dp"
                    android:lineSpacingExtra="4dp"
                    android:lines="2"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="顏色分类：黄色  尺寸：xxl" />
                <TextView
                    android:id="@+id/txt_order_goods_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X1"
                    android:layout_marginRight="8dp"
                    android:textColor="#acacac"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>