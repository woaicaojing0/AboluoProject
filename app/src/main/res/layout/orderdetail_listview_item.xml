<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="3dp"
        android:background="#f5f5f5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ordetail_item_goodsimage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/ordetail_item_goodsname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lineSpacingExtra="4dp"
                    android:lines="2"
                    android:paddingLeft="8dp"
                    android:text="啥事都问我干啥干啥的干啥的干啥的感受到对方水电费为白色的手势"
                    android:textColor="#000000" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ordetail_item_hyprice"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:text="￥1690.00"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/tordetail_item_yuanprice"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="￥1690.00"
                        android:textColor="#acacac" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ordetail_item_standardandcolor"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:lineSpacingExtra="4dp"
                    android:lines="2"
                    android:text="顏色分类：黄色  尺寸：xxl" />

                <TextView
                    android:id="@+id/ordetail_item__goods_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="X1"
                    android:textColor="#acacac" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:paddingTop="4dp">

        <TextView
            android:id="@+id/txt_orderdetail_after_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/txt_orderdetail_evaluate"
            android:background="@drawable/order_red_button"
            android:paddingBottom="7dp"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:paddingTop="7dp"
            android:text="申请售后"
            android:textColor="@color/btn_color"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_orderdetail_evaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/order_red_button"
            android:paddingBottom="7dp"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:paddingTop="7dp"
            android:text="评价"
            android:textColor="@color/btn_color"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout>